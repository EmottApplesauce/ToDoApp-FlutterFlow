{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/firestore/users.schema.json",
  "title": "User Document",
  "type": "object",
  "properties": {
    "uid": {
      "type": "string",
      "description": "Firebase Authentication user ID"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "display_name": {
      "type": "string"
    },
    "photo_url": {
      "type": "string",
      "format": "uri"
    },
    "birthday": {
      "type": "string",
      "format": "date-time",
      "description": "User birthday stored as Firestore timestamp"
    },
    "created_time": {
      "type": "string",
      "format": "date-time",
      "description": "Account creation timestamp"
    }
  },
  "required": ["uid", "email", "created_time"],
  "additionalProperties": false
}
